<h2><%= @restaurant.title %></h2>

<h3>Food Type</h3>
<p><%= @restaurant.food_type %></p>

<h3>Address</h3>
<p><%= @restaurant.address %></p>

<h3>Description</h3>
<p><%= @restaurant.description %></p>

<h3>Reviews</h3>
<ul>
    <% @restaurant.reviews.each do |review| %>
        <li>
            <p><%= review.title %> - <%= review.rating %> </p>
            <p><%= review.content %></p>
        </li>
    <% end %>
</ul>

<%= link_to "Back", :back %>
